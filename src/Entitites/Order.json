{
  "name": "Order",
  "type": "object",
  "properties": {
    "order_number": {
      "type": "string",
      "description": "Nomor pesanan unik"
    },
    "customer_name": {
      "type": "string",
      "description": "Nama lengkap pemesan"
    },
    "customer_email": {
      "type": "string",
      "description": "Email pemesan"
    },
    "customer_phone": {
      "type": "string",
      "description": "Nomor telepon pemesan"
    },
    "company": {
      "type": "string",
      "description": "Asal perusahaan"
    },
    "position": {
      "type": "string",
      "description": "Jabatan pemesan"
    },
    "address": {
      "type": "string",
      "description": "Alamat lengkap"
    },
    "product_name": {
      "type": "string",
      "description": "Nama produk yang dipesan"
    },
    "material": {
      "type": "string",
      "description": "Material yang dipilih"
    },
    "size": {
      "type": "string",
      "description": "Ukuran yang dipilih"
    },
    "color": {
      "type": "string",
      "description": "Warna yang dipilih"
    },
    "additional_notes": {
      "type": "string",
      "description": "Catatan tambahan dari pemesan"
    },
    "quantity": {
      "type": "number",
      "description": "Jumlah pesanan"
    },
    "total_price": {
      "type": "number",
      "description": "Total harga"
    },
    "status": {
      "type": "string",
      "enum": [
        "Pengajuan",
        "Penawaran",
        "Pre-Order",
        "Cancel",
        "Proses",
        "Dikirim"
      ],
      "default": "Pengajuan",
      "description": "Status pesanan"
    }
  },
  "required": [
    "order_number",
    "customer_name",
    "product_name",
    "status"
  ]
}